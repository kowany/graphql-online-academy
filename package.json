{
  "name": "online-academy-kowany",
  "version": "1.0.0",
  "description": "Primer proyecto en el curso - Proyecto GraphQL con una academia online sin base de datos",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "build": "npx tsc - p . && ncp src/schema build/schema",
    "dev": "nodemon \"src/app.ts\" --exec \"ts-node\" -e ts,graphql,json"
  },
  "keywords": [
    "graphql-from-scratch",
    "online-academy",
    "json",
    "no-db"
  ],
  "author": "Hector Villaverde <hvilla65@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.25.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "0.0.4",
    "graphql-playground-middleware-express": "^1.7.22",
    "graphql-tools": "^8.0.0",
    "ncp": "^2.0.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/node": "^16.4.10",
    "nodemon": "^2.0.12",
    "ts-node": "^10.1.0"
  }
